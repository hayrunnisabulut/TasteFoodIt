@model List<TasteFoodIt.Entities.Location>

@{
    ViewBag.Title = "LocationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Konum Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Konumlar</li>
            <li class="breadcrumb-item active" aria-current="page">Konum İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Konumlar</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Konum Id</th>
                                <th>Konum Adı</th>
                                <th>Konum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.LocationId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td><a href="/Location/DeleteLocation/@item.LocationId" class="btn btn-danger">Kategoriyi Sil</a>
                                    <td><a href="/Location/UpdateLocation/@item.LocationId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Location/CreateLocation/" class="btn btn-primary">Yeni Konum Girişi</a>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->

</div>

