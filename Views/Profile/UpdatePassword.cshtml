@model TasteFoodIt.Entities.Admin

@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Şifre Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana sayfa</a></li>
            <li class="breadcrumb-item">Ürünler</li>
            <li class="breadcrumb-item active" aria-current="page">Şifre İşlemleri</li>
        </ol>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.AdminId)
                            <label>Kullanıcı adı</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            <br />
                            <label>Şifre</label>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            <br />
                        </div>
                        <button type="submit" class="btn btn-primary">Şifre Güncelle</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>



