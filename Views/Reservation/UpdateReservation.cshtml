@model TasteFoodIt.Entities.Reservation

@{
    ViewBag.Title = "UpdateReservation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rezervasyon Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana sayfa</a></li>
            <li class="breadcrumb-item">Rezervasyonlar</li>
            <li class="breadcrumb-item active" aria-current="page">Rezervasyon İşlemleri</li>
        </ol>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ReservationId)
                            <label for="exampleInputCategory">Adı</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            <label for="exampleInputCategory">Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            <label for="exampleInputCategory">Telefon</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            <label for="exampleInputCategory">Tarih</label>
                            @Html.TextBoxFor(x => x.ReservationDate, new { @class = "form-control" })
                            <label for="exampleInputCategory">Saat</label>
                            @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
                            <label for="exampleInputCategory">Kişi Sayısı</label>
                            @Html.TextBoxFor(x => x.GuestCount, new { @class = "form-control" })
                            <label for="exampleInputCategory">Statusu</label>
                            @Html.TextBoxFor(x => x.ReservationStatus, new { @class = "form-control" })
                        </div>
                        <button type="submit" class="btn btn-primary">Rezervasyonu Güncelle</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
