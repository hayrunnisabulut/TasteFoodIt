@model List<TasteFoodIt.Entities.Reservation>

@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rezervasyon Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Rezervasyonlar</li>
            <li class="breadcrumb-item active" aria-current="page">Rezervasyon İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Rezervasyonlar</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Rezervasyon Id</th>
                                <th>Ad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Rezervasyon Tarihi</th>
                                <th>Saat</th>
                                <th>Kişi Sayısı</th>
                                <th>Rezervasyon Durumu</th>
                                <th>Sil</th>
                                <th>Onayla</th>
                                <th>Beklet</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{var renk = ""; }
                            @foreach (var item in Model)
                            {
                                if (item.ReservationStatus == "Onaylandı")
                                {
                                    renk = "badge badge-success";
                                }
                                else if (item.ReservationStatus == "Beklemede")
                                {
                                    renk = "badge badge-warning";
                                }
                                else
                                {
                                    renk = "badge badge-danger";
                                }
                                <tr>
                                    <td>@item.ReservationId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.ReservationDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Time</td>
                                    <td>@item.GuestCount</td>
                                    <td><span class="@renk">@item.ReservationStatus</span></td>
                                    <td><a href="/Reservation/DeleteReservation/@item.ReservationId" class="btn btn-danger">Sil</a>
                                    <td><a href="/Reservation/ApproveReservation/@item.ReservationId" class="btn btn-success">Onayla</a>
                                    <td><a href="/Reservation/WaitReservation/@item.ReservationId" class="btn btn-warning">Beklet</a>
                                    <td><a href="/Reservation/UpdateReservation/@item.ReservationId" class="btn btn-info">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Reservation/CreateReservation/" class="btn btn-primary">Yeni Rezervasyon Girişi</a>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->

</div>


