
@{
    ViewBag.Title = "CreateChef";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Şef Ekleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana sayfa</a></li>
            <li class="breadcrumb-item">Şefler</li>
            <li class="breadcrumb-item active" aria-current="page">Şef İşlemleri</li>
        </ol>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Ekleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="exampleInputCategory">Şef Adı Soyadı</label>
                            <input type="text" class="form-control" name="NameSurname" id="exampleInputCategory" aria-describedby="emailHelp"
                                   placeholder="Şef Adını Giriniz">
                            <label for="exampleInputCategory">Şef Açıklama</label>
                            <input type="text" class="form-control" name="Description" id="exampleInputCategory" aria-describedby="emailHelp"
                                   placeholder="Açıklama Giriniz">
                            <label for="exampleInputCategory">Şef Resmi</label>
                            <input type="text" class="form-control" name="ImageUrl" id="exampleInputCategory" aria-describedby="emailHelp"
                                   placeholder="Şef Resmini Giriniz">
                            <label for="exampleInputCategory">Şef Başlık</label>
                            <input type="text" class="form-control" name="Title" id="exampleInputCategory" aria-describedby="emailHelp"
                                   placeholder="Şef Başlığı Giriniz">
                        </div>
                        <button type="submit" class="btn btn-primary">Şefi Ekle</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


