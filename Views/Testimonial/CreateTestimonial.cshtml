
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Referans Ekleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana sayfa</a></li>
            <li class="breadcrumb-item">Referanslar</li>
            <li class="breadcrumb-item active" aria-current="page">Referans İşlemleri</li>
        </ol>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Ekleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="exampleInputCategory">Referans Adı</label>
                            <input type="text" class="form-control" name="NameSurname"
                                   placeholder="Referans Adını Giriniz">
                            <label for="exampleInputCategory">Referans Unvan</label>
                            <input type="text" class="form-control" name="Title"
                                   placeholder="Ünvanını Giriniz">
                            <label for="exampleInputCategory">Açıklama</label>
                            <input type="text" class="form-control" name="Description" 
                                   placeholder="Açıklama Giriniz">
                            <label for="exampleInputCategory">Resim Url</label>
                            <input type="text" class="form-control" name="ImageUrl"
                                   placeholder="Resim Url Giriniz">
                        </div>
                        <button type="submit" class="btn btn-primary">Referans Ekle</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
