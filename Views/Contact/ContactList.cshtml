@model List<TasteFoodIt.Entities.Contact>

@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mesaj Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Mesajlar</li>
            <li class="breadcrumb-item active" aria-current="page">Mesaj İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Mesajlar</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Mesaj Id</th>
                                <th>Gönderen Ad Soyad</th>
                                <th>Email</th>
                                <th>Konu</th>
                                <th>Mesaj</th>
                                <th>Gönderilme Tarihi</th>
                                <th>Okundu Bilgisi</th>
                                <th>Mesaj İçeriği</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ContactId</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Email</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Message</td>
                                    <td>@item.SendDate</td>
                                    @if (item.IsRead == true)
                                    {
                                        <td>
                                            <a href="/Contact/UpdateContactIsRead/@item.ContactId" class="btn btn-warning">Okunmadı Olarak İşaretle</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a href="/Contact/UpdateContactIsRead/@item.ContactId" class="btn btn-dark">Okundu Olarak İşaretle</a>
                                        </td>
                                    }
                                    <th><a href="/Contact/OpenMessage/@item.ContactId" class="btn btn-success">Mesajı Aç</a></th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->

</div>


